@{
    
    ViewBag.Title = "Consultants";
}

<h2>Consultants</h2>

<ul>
    @foreach (var consultant in Model.Consultants)
    {
        <li>
            <a asp-controller="Consultant" asp-action="Details" asp-route-id="@consultant.Id">
                @consultant.FirstName - @consultant.Speciality
            </a>
        </li>
    }
</ul>
}
